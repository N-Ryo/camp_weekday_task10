<% if @result != nil && @result["status"] == 200 %>
  <h1>エリア登録</h1>
  <%= form_with model: @area do |form| %>
    <%= form.label :zipcode, 'Zipcode' %>
    <%= form.text_field :zipcode, value: @zipcode %>
    <%= form.label :address1, 'Address1' %>
    <%= form.text_field :address1, value: @address1 %>
    <%= form.label :address2, 'Address2' %>
    <%= form.text_field :address2, value: @address2 %>
    <%= form.label :address3, 'Address3' %>
    <%= form.text_field :address3, value: @address3 %>
    <%= form.label :kana1, 'Kana1' %>
    <%= form.text_field :kana1, value: @kana1 %>
    <%= form.label :kana2, 'Kana2' %>
    <%= form.text_field :kana2, value: @kana2 %>
    <%= form.label :kana3, 'Kana3' %>
    <%= form.text_field :kana3, value: @kana3 %>
    <%= form.label :introduction, 'Introduction' %>
    <%= form.text_area :introduction, value: @introduction %>
    <%= form.submit '検索', class: "btn btn-primary"%>
  <% end %>
<% else %>
  <h1>エリア検索</h1>
  <%= form_with method: :get, local: true do |form| %>
    <%= form.label '郵便番号で検索' %>
    <%= form.text_field :zipcode %>
    <%= form.submit '検索', class: "btn btn-primary"%>
  <% end %>
<% end %>
<p>
郵便番号: <%= @zipcode %>
</p>
<p>
都道府県: <%= @address1 %>
</p>
<p>
市区町村: <%= @address2 %>
</p>
<p>
町名: <%= @address3 %>
</p>
<p>
<!-- リクエストパラメタを表示-->
リクエストパラメタ: <%= @query%>
</p>
<!-- 生のjsonを表示-->
result: <%= @result%>
</p>
<p>
  <!-- エラーメッセージを表示-->
message: <%= @message%>
</p>