<% if @result != nil && @result["status"] == 200 %>
  <h1>エリア登録</h1>
  <%= form_with url: '/areas/search', model: @area, local: true do |form| %>
    <%= form.label :zipcode, 'Zipcode' %>
    <%= form.text_field :zipcode, value: @zipcode, readonly: true %>
    <%= form.label :address1, 'Address1' %>
    <%= form.text_field :address1, value: @address1, readonly: true %>
    <%= form.label :address2, 'Address2' %>
    <%= form.text_field :address2, value: @address2, readonly: true %>
    <%= form.label :address3, 'Address3' %>
    <%= form.text_field :address3, value: @address3, readonly: true %>
    <%= form.label :kana1, 'Kana1' %>
    <%= form.text_field :kana1, value: @kana1, readonly: true %>
    <%= form.label :kana2, 'Kana2' %>
    <%= form.text_field :kana2, value: @kana2, readonly: true %>
    <%= form.label :kana3, 'Kana3' %>
    <%= form.text_field :kana3, value: @kana3, readonly: true %>
    <%= form.label :introduction, 'Introduction' %>
    <%= form.text_area :introduction, value: @introduction %>
    <%= form.submit '登録する', class: "btn btn-primary"%>
  <% end %>
<% else %>
  <h1>エリア検索</h1>
  <%= form_with method: :get, local: true do |form| %>
    <%= form.label '郵便番号で検索' %>
    <%= form.text_field :zipcode %>
    <%= form.submit '検索', class: "btn btn-primary"%>
  <% end %>
<% end %>